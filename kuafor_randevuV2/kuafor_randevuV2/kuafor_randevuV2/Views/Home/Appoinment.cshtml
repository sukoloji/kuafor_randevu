@{
    ViewBag.Title = "";
    var isValid = ViewBag.IsValid;
}


@using (Html.BeginForm("Appoinment", "Home", FormMethod.Post))
{
    if (isValid != null && isValid != "")
    {
        <div class="alert alert-danger">
            @isValid
        </div>
    }
    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading text-center">
                <h3>Randevu Oluştur</h3>
            </div>
            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                    @Html.TextBox("TransDate", null, new { @class = "form-control", @placeholder = "Tarih" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                                    @Html.TextBox("Hour", null, new { @class = "form-control", @placeholder = "Saat" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
                                    @Html.DropDownList("services", null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.DropDownList("personel", null, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Oluştur</button>
                    <br />
                    <br />
                    <a href="/home/pricelist">Fiyat Listesi</a><br />
                    <a href="/home/processtimes">İşlem Süreleri</a>
                </form>
            </div>
        </div>
    </div>
}