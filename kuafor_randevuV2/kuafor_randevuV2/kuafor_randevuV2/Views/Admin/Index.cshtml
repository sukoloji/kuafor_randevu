@{ 
    var isValid = ViewBag.IsValid;
}

@using (Html.BeginForm("Index", "Admin", FormMethod.Post))
{
    if (isValid != null && isValid != "")
    {
        <div class="alert alert-danger">
            @isValid
        </div>
    }

    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading text-center">
                <h3>Admin Panel Giriş</h3>
            </div>
            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.TextBox("UserName", null, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.Password("Password", null, new { @class = "form-control", @placeholder = "Şifre" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Giriş</button>
                </form>
            </div>
        </div>
    </div>
}